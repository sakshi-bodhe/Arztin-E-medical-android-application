<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ambulance">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ambu"
        android:layout_width="326dp"
        android:layout_height="434dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/ambulance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/ic_call"
        android:fontFamily="@font/abeezee"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Emergency Call"
        app:layout_constraintEnd_toEndOf="@+id/ambu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ambu"
        app:layout_constraintTop_toBottomOf="@+id/ambu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/baloo"
        android:text="Ambulance Services"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/ambu"
        app:layout_constraintEnd_toEndOf="@+id/ambu"
        app:layout_constraintStart_toStartOf="@+id/ambu" />

</androidx.constraintlayout.widget.ConstraintLayout>